<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iodaniel.mobileclass">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.MobileClass">
        <activity
            android:name=".teacher_package.TeacherSettings"
            android:exported="false" />
        <activity
            android:name=".student_package.StudentSettings"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/pref_main" />

        <activity
            android:name=".SettingsFragment"
            android:exported="false" />
        <activity
            android:name=".student_package.AClass"
            android:exported="false" />
        <activity
            android:name=".teacher_package.singleclass.material.MaterialPage"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".accessing_mobile_app.SignInOrSignUp" />
        <activity android:name=".student_package.StudentInitPage" />
        <activity android:name=".accessing_mobile_app.SignUp" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".teacher_package.classes.ClassUpload"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".teacher_package.singleclass.AClass"
            android:theme="@style/Theme.AClass" />
        <activity android:name=".accessing_mobile_app.SignIn" />
        <activity android:name=".teacher_package.classes.TeacherPage" />
        <activity android:name=".student_package.MyClasses" />
        <activity android:name=".student_package.ViewMaterial" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>