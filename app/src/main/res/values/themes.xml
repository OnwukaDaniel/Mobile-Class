<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileClass" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryVariant">@color/app_dark_color</item>
        <item name="colorAccent">@color/app200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_primary_color</item>
        <item name="colorSecondaryVariant">@color/app_primary_cream</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_primary_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorSurface">@color/app300</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorTertiary">@color/gray1</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="iconTint">@color/app200</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textColor">@color/white</item>

        <item name="background">@color/white</item>
        <item name="trackColor">@color/teal_100</item>
        <item name="indicatorColor">@color/teal_100</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/app10</item>
    </style>

    <style name="TransparentBackground" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--Name Class Dialog-->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProgressBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
    </style>


    <style name="roundImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:thickness">10dp</item>
    </style>

    <style name="Autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="WarningDialogs" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="CircleProgress">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.AClassTabLayout" parent="Theme.MaterialComponents">
        <item name="colorSurface">@color/app_primary_color</item>
        <item name="colorOnSurface">@color/ninety_black</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>